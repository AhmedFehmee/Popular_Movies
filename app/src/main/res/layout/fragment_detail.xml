<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ahmed.popularmovies.DetailFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMovieName"
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:layout_weight="1"
                android:background="@color/material_deep_teal_500"
                android:elevation="3dp"
                android:gravity="center|left"
                android:paddingLeft="20dp"
                android:textColor="@android:color/white"
                android:textSize="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivMiniPoster"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvReleaseDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:textColor="@android:color/black"
                        android:textSize="21dp" />

                    <TextView
                        android:id="@+id/tvVoteAverage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:textColor="@android:color/black"
                        android:textSize="15dp" />

                    <Button
                        android:id="@+id/ivMakeItFavorite"
                        android:layout_width="wrap_content"
                        android:layout_height="75dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/blank" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="7dp"
                android:layout_weight="0.6">

                <TextView
                    android:id="@+id/tvOverview"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="19dp"
                    android:paddingRight="18dp"
                    android:textColor="@android:color/black"
                    android:textSize="17dp" />
            </ScrollView>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:background="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_weight="0.5"
                android:paddingLeft="17dp"
                android:paddingTop="3dp"
                android:text="Trailers:"
                android:textColor="@android:color/black"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/ivPlayTrailer1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:src="@drawable/play" />


                <TextView
                    android:id="@+id/tvFirstTrailer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.6"
                    android:text="Trailer 1"
                    android:textColor="@android:color/black"
                    android:textSize="23dp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.7dip"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:background="@color/button_material_light" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivPlayTrailer2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:src="@drawable/play" />

                <TextView
                    android:id="@+id/tvSecondTrailer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.6"
                    android:paddingLeft="17dp"
                    android:text=" Trailer 2"
                    android:textColor="@android:color/black"
                    android:textSize="23dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:text="Reviews"
                    android:textColor="@android:color/black"
                    android:textSize="25dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tvFirstAuthor"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="17dp"
                        android:layout_marginRight="17dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="0.8"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="3">

                    <TextView
                        android:id="@+id/tvFirstReview"
                        android:layout_width="match_parent"
                        android:layout_height="7dp"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="17dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:textColor="@android:color/black" />
                </ScrollView>


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.7dip"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/button_material_light" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvSecondAuthor"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="17dp"
                        android:layout_marginRight="17dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="0.7"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="3">

                    <TextView
                        android:id="@+id/tvSecondReview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="17dp"
                        android:layout_marginRight="17dp"
                        android:textColor="@android:color/black" />
                </ScrollView>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</FrameLayout>